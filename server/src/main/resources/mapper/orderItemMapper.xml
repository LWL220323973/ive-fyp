<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.mapper.OrderItemMapper">
    <select id="findOrderItemsByOrderId" resultType="com.server.model.OrderItem">
        SELECT * FROM order_item WHERE order_id = #{orderId}
    </select>
    
    <select id="getAllOrderItems" resultType="com.server.model.OrderItem">
        SELECT * FROM order_item
    </select>
</mapper>